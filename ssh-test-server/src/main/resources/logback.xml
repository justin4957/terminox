<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with colored output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan([%logger{20}]) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for detailed logging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/ssh-test-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/ssh-test-server.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Detailed SSH protocol logging for debugging -->
    <appender name="SSH_DEBUG" class="ch.qos.logback.core.FileAppender">
        <file>logs/ssh-protocol.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- SSH server logging - set to DEBUG for verbose output -->
    <logger name="org.apache.sshd" level="DEBUG" additivity="false">
        <appender-ref ref="SSH_DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Application logging -->
    <logger name="com.terminox.testserver" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Reduce noise from certain loggers -->
    <logger name="org.apache.sshd.common.util.threads" level="WARN"/>
    <logger name="org.apache.sshd.common.keyprovider" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
